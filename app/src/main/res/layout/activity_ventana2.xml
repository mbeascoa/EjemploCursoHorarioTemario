<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ventana2">

    <TextView
        android:id="@+id/textViewVentana2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textViewVentana2_1" />

    <TextView
        android:id="@+id/textViewVentana2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textViewVentana2_2" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cerrarVentana"
        android:text="CerrarVentana" />
</LinearLayout>